<div>
  <div>
    <h1>
      List of all deliveries
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new delivery
    </h2>

    <form action="/insert_delivery" method="post">
      <div>
        <label for="description_box">
          Description
        </label>

        <input type="text" id="description_box" name="query_description">
      </div>

      <div>
        <label for="expected_on_box">
          Expected on
        </label>

        <input type="date" id="expected_on_box" name="query_expected_on">
      </div>

      <div>
        <input type="checkbox" id="received_box" name="query_received" value="1">

        <label for="received_box">Received</label>
      </div>

      <div>
        <label for="user_id_box">
          User
        </label>

        <input type="text" id="user_id_box" name="query_user_id">
      </div>

      <button>
        Create delivery
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          Description
        </th>

        <th>
          Expected on
        </th>

        <th>
          Received
        </th>

        <th>
          User
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_deliveries.each do |a_delivery| %>
      <tr>
        <td>
          <%= a_delivery.id %>
        </td>

        <td>
          <%= a_delivery.description %>
        </td>

        <td>
          <%= a_delivery.expected_on %>
        </td>

        <td>
          <%= a_delivery.received %>
        </td>

        <td>
          <%= a_delivery.user_id %>
        </td>

        <td>
          <%= time_ago_in_words(a_delivery.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_delivery.updated_at) %> ago
        </td>

        <td>
          <a href="/deliveries/<%= a_delivery.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
